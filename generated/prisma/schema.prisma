generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int         @id @default(autoincrement())
  email         String      @unique
  nome          String
  sobrenome     String
  senha         String
  tipo          TipoUsuario
  foto_perfil   String?
  data_criacao  DateTime    @default(now())
  ultimo_acesso DateTime?
  ativo         Boolean     @default(true)
}

enum TipoUsuario {
  aluno
  professor
  administrador
}
